<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/grey_200">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_photo_album_black_24dp" />

        <ImageView
            android:id="@+id/imgvCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgvPortrait"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="나의 마니또" />

        <TextView
            android:id="@+id/txtvTo"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="" />


        <TextView
            android:layout_marginTop="52dp"
            android:textSize="20sp"
            android:id="@+id/txtvMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선물하기" />

        <TextView
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:id="@+id/txtvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선물하기" />


        <EditText
            android:id="@+id/etxtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="전달할 메세지를 입력하세요."
            android:layout_marginBottom="72dp"/>

    </LinearLayout>

</LinearLayout>