<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryLight">@color/primary_light</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MySwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorSwitchThumbNormal">@color/grey_300</item>
        <item name="android:textColorPrimary">@color/grey_200</item>
        <item name="colorAccent">@color/light_green_a700</item>
        <item name="android:textColorSecondary">@color/grey_200</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
    </style>
    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
