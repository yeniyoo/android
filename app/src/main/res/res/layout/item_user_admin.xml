<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/white"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgvPortrait"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/txtvName"
        style="@style/medium_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/imgvPortrait"
        android:text="이홍주님"
        android:textColor="@color/grey_900"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/txtvName"
        android:text="은"
        android:textColor="@color/grey_700"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtvName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/text"
        android:text="박나영님"
        style="@style/medium_bold"
        android:textColor="@color/grey_900"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/txtvName2"
        android:text="의 마니또 입니다."
        android:textColor="@color/grey_700"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/medium_bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:text="3/7"
        android:textColor="@color/light_blue_700"
        android:textSize="18dp" />

</RelativeLayout>



